
@{
    ViewData["Title"] = "Prikazi";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Mjere;
@model MjerePrikaziVM

<h3>Prikaz mjera za kategoriju "<b>@Model.NazivKategorije</b>"</h3>
<hr />
<input type="text" name="name" value="@Model.KategorijeId" hidden />
<table class="table table-hover table-bordered table-condensed">
    <thead>
        <tr>
            <th>Opis</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.OpisMjere</td>
                <td>
                    <a href="/AdministratorModul/Mjere/Uredi?=@x.MjereId">Uredi</a>
                    <a href="/AdministratorModul/Mjere/Obrisi?=@x.MjereId"><i class="fa fa-fw fa-close fa-1x text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/AdministratorModul/Mjere/Dodaj?=@Model.KategorijeId" class="btn btn-outline-info">Dodaj</a>
<br />
<br />
<hr />
<a href="/AdministratorModul/Mjere"><< vrati na Mjere</a>
