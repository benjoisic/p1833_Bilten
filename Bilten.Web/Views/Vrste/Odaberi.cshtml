
@{
    ViewData["Title"] = "Odaberi";
}
@using Bilten.Web.ViewModels.Vrste;
@model VrsteOdaberiVM

<h3>Prikaz svih vrsta za kategoriju "<b>@Model.NazivKategorije</b>"</h3>
<hr />
<table class="table-bordered table-condensed">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.Naziv</td>
                <td>
                    <a href="/Vrste/Uredi?=@x.VrsteId">Uredi</a>|
                    <a href="/Vrste/Obrisi?=@x.VrsteId">Obriši</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
<a href="/Vrste/Dodaj?=@Model.KategorijeId" class="btn btn-success">Dodaj vrstu</a>
<br /><br />
<a href="/Vrste/Index"><< vrati na Vrste</a>