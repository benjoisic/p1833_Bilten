
@{
    ViewData["Title"] = "Dodaj";
}
@using Bilten.Web.ViewModels.Vrste;
@model VrsteDodajVM

<h2>Dodavanje nove vrste za kategoriju "<b>@Model.NazivKategorije</b></h2>
<hr />

<form action="/Vrste/Snimi" >
    <input type="text" name="kategorijeId" value="@Model.KategorijeId" hidden/>

    <label>Naziv:</label>
    <input type="text" name="nazivVrste" />
    <br />
    <br />
    <input type="submit" name="name" value="Snimi" class="btn btn-danger" />
</form>

